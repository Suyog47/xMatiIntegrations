{
  "compilerOptions": {
    "target": "ES2017",                                
    "module": "commonjs",   
    "outDir": "./dist",                    
    "rootDir": "./src",                            
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true                              
  },
  "include": ["src/**/*", "utils"],                
  "exclude": ["node_modules"]    
}
